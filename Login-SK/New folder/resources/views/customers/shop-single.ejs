<% if(product){ %>
    <% let prd=product[0] %>
        <% let str=store[0] %>
            <input id="prdInp" type="hidden" value="<%= JSON.stringify(prd) %>">
            <input id="relaPrdInp" type="hidden" value="<%= JSON.stringify(relatedPrds) %>">
            <!-- Open Content -->
            <section class="bg-light" style="padding-bottom: 3%;">
                <div class="container pb-5">
                    <div class="row">
                        <div class="col-lg-5 mt-5">
                            <div class="card mb-3">
                                <img class="card-img img-fluid" src="../uploadedImages/<%= prd.image[0].img %>" alt="Card image cap" id="product-detail">
                            </div>
                            <div class="row">
                                <!--Start Controls-->
                                <div class="col-1 align-self-center">
                                    <a href="#multi-item-example" role="button" data-bs-slide="prev">
                                        <i class="text-dark fas fa-chevron-left"></i>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                </div>
                                <!--End Controls-->

                                <!--Start Carousel Wrapper-->
                                <div id="multi-item-example" class="col-10 carousel slide carousel-multi-item" data-bs-ride="carousel">
                                    <!--Start Slides-->
                                    <div class="carousel-div carousel-inner product-links-wap" role="listbox">
                                    </div>
                                    <!--End Slides-->
                                </div>
                                <!--End Carousel Wrapper-->

                                <!--Start Controls-->
                                <div class="col-1 align-self-center">
                                    <a href="#multi-item-example" role="button" data-bs-slide="next">
                                        <i class="text-dark fas fa-chevron-right"></i>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </div>
                                <!--End Controls-->
                            </div>
                            <div class="cart-btns-div">
                                <div class="row quantity-div">
                                    <div class="col-auto">
                                        <ul class="list-inline pb-3">
                                            <li class="list-inline-item text-right">
                                                Quantity
                                                <input type="hidden" name="product-quanity" id="product-quanity" value="1">
                                            </li>
                                            <li class="list-inline-item"><span class="btn btn-success" id="btn-minus">-</span></li>
                                            <li class="list-inline-item"><span class="badge bg-secondary" id="var-value">1</span></li>
                                            <li class="list-inline-item"><span class="btn btn-success" id="btn-plus">+</span></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <button id="cart-button" class="btn cart-buy-button">
                                            <svg class="_1KOMV2" width="25" height="25" viewBox="0 0 16 15"
                                                xmlns="http://www.w3.org/2000/svg">
                                                <path class=""
                                                    d="M15.32 2.405H4.887C3 2.405 2.46.805 2.46.805L2.257.21C2.208.085 2.083 0 1.946 0H.336C.1 0-.064.24.024.46l.644 1.945L3.11 9.767c.047.137.175.23.32.23h8.418l-.493 1.958H3.768l.002.003c-.017 0-.033-.003-.05-.003-1.06 0-1.92.86-1.92 1.92s.86 1.92 1.92 1.92c.99 0 1.805-.75 1.91-1.712l5.55.076c.12.922.91 1.636 1.867 1.636 1.04 0 1.885-.844 1.885-1.885 0-.866-.584-1.593-1.38-1.814l2.423-8.832c.12-.433-.206-.86-.655-.86"
                                                    fill="#fff"></path>
                                            </svg>
                                            Add to Cart
                                        </button>
                                    </div>
                                    <div class="col-6">
                                        <button id="buy-button" class="btn cart-buy-button">
                                            ⚡︁ Buy Now
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- col end -->
                        <div class="col-lg-7 mt-5">
                            <div class="card">
                                <div class="card-body">
                                    <h1 class="h2">
                                        <%= prd.name %>
                                    </h1>
                                    <span class="h3 py-2">₹
                                        <%= prd.price %>
                                    </span>
                                    <br>
                                    <span class="py-2">
                                        <i class="fa fa-star text-warning"></i>
                                        <i class="fa fa-star text-warning"></i>
                                        <i class="fa fa-star text-warning"></i>
                                        <i class="fa fa-star text-warning"></i>
                                        <i class="fa fa-star text-secondary"></i>
                                        <span class="list-inline-item text-dark">Rating <%= prd.rating %> | 36
                                                Comments</span>
                                    </span>
                                    <br>
                                    <br>
                                    <h6>Avaliable Offers:</h6>
                                    <div class="offer">
                                        <% let offer=prd['offer'][0] %>
                                            <% if(Object.keys(offer).length> 0) { %>
                                                <% for(i=0; i< Object.keys(offer).length; i++) { %>

                                                    <% for(let key in offer[i]) { %>
                                                        <p>
                                                            <span><img src="../img/offerTag.png" alt="offerTag"></span>
                                                            <strong>
                                                                <%= key %>
                                                            </strong>
                                                            <span>
                                                                <%= offer[i][key] %>
                                                            </span>
                                                        </p>
                                                        <% } %>

                                                            <% } %>
                                                                <% } else { %>
                                                                    <p class="ml-40">
                                                                        <strong>No</strong> offers available
                                                                    </p>
                                                                    <% } %>

                                    </div>

                                    <h6>Warranty/Garranty:</h6>
                                    <div class="warr">
                                        <% let warr=prd['Warr_Garr'][0] %>
                                            <% if(Object.keys(warr).length> 0) { %>
                                                <% for(i=0; i< Object.keys(warr).length; i++) { %>

                                                    <p id="warr-p" class="ml-40">
                                                        <% for(let key in warr[i]) { %>

                                                            <% if(key=='type' ){ %>
                                                                <span id="warr-span-type">
                                                                    <%= warr[i][key] %>
                                                                </span>
                                                                <% } %>

                                                                    <% if(key=='duration' ){ %>
                                                                        <span>
                                                                            <%= warr[i][key] %>
                                                                        </span>
                                                                        <% } %>

                                                                            <% if(key=='description' ){ %>
                                                                                <br>
                                                                                <br>
                                                                                <span>
                                                                                    <%= warr[i][key] %>
                                                                                </span>
                                                                                <% } %>

                                                                                    <% } %>
                                                    </p>

                                                    <% } %>
                                                        <% } else { %>
                                                            <p class="ml-40"><strong>No</strong> Warranty/Garranty available
                                                            </p>
                                                            <% } %>
                                    </div>


                                    <% if(prd.color.length> 0) { %>
                                        <h6>Color:</h6>
                                        <div class="color">
                                            <ul id="color" class="">
                                                <% prd.color.map(color=> { %>
                                                    <li class="color-span-main ml-40">
                                                        <img id="color-img" class="color-img" src="../uploadedImages/<%= prd.image[0].img %>" alt="<%= prd.name %> image" id="product-detail">
                                                        <span id="color-name-span">
                                                            <%= color %>
                                                        </span>
                                                    </li>
                                                    <% }) %>
                                            </ul>
                                        </div>
                                        <% } %>

                                            <% if(prd.size.length> 0) { %>
                                                <h6>Size:</h6>
                                                <div class="size">
                                                    <div class="col-auto ml-40">
                                                        <ul class="list-inline pb-3">
                                                            <% prd.size.map(size=> { %>
                                                                <li class="list-inline-item">
                                                                    <span class="btn btn-success btn-size">
                                                                        <%= size %>
                                                                    </span>
                                                                </li>
                                                                <% }) %>
                                                        </ul>
                                                    </div>
                                                </div>
                                                <% } %>

                                                    <div class="row">
                                                        <div class="col-6">
                                                            <% if(prd.highlight.length> 0) { %>
                                                                <h6>Highlight:</h6>
                                                                <div class="highlight">
                                                                    <% prd.highlight.map(highlight=> { %>
                                                                        <li class="fs-15 ml-40">
                                                                            <%= highlight %>
                                                                        </li>
                                                                        <% }) %>
                                                                </div>
                                                                <% } %>
                                                        </div>
                                                        <div class="col-6">
                                                            <% if(prd.payment_ops.length> 0) { %>
                                                                <h6>Payment Options:</h6>
                                                                <div class="payops">
                                                                    <% prd.payment_ops.map(payment_ops=> { %>
                                                                        <li class="fs-15 ml-40">
                                                                            <%= payment_ops %>
                                                                        </li>
                                                                        <% }) %>
                                                                </div>
                                                                <% } %>
                                                        </div>
                                                    </div>

                                                    <div class="row">
                                                        <div class="col-6">
                                                            <% if(prd.service.length> 0) { %>
                                                                <h6>Service:</h6>
                                                                <div class="service">
                                                                    <% prd.service.map(service=> { %>
                                                                        <li class="fs-15 ml-40">
                                                                            <%= service %>
                                                                        </li>
                                                                        <% }) %>
                                                                </div>
                                                                <% } %>
                                                        </div>
                                                        <div class="col-6">
                                                            <h6>Seller:</h6>
                                                            <div class="seller">
                                                                <span class="fs-15 ml-40 seller-span-strName">
                                                                    <%= str.storename %>
                                                                </span>
                                                                <span class="fs-15 ml-40 seller-span-strRating">
                                                                    <%= str.rating %>&nbsp;<i class="fa fa-star"></i>
                                                                </span>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <h6>Description:</h6>
                                                    <div class="desc">
                                                        <p class="ml-40">
                                                            <%= prd.desc %>
                                                        </p>
                                                    </div>

                                                    <div class="spec">
                                                        <% let spec=prd['specification'][0] %>
                                                            <div class="head">
                                                                <h3>Specification:</h3>
                                                            </div>
                                                            <div class="body" id="specBody">
                                                                <% for (let title in spec) { %>
                                                                    <div class="body-main-div">
                                                                        <h5>
                                                                            <%= title %>
                                                                        </h5>
                                                                        <% for (let keyVal in spec[title]) { %>
                                                                            <div class="row">
                                                                                <div class="col-4">
                                                                                    <span class="fs-15 row-span1">
                                                                                        <%= keyVal %>
                                                                                    </span>
                                                                                </div>
                                                                                <div class="col-8">
                                                                                    <span class="fs-15 row-span2">
                                                                                        <%= spec[title][keyVal] %>
                                                                                    </span>
                                                                                </div>
                                                                            </div>
                                                                            <% } %>
                                                                    </div>
                                                                    <% } %>
                                                            </div>
                                                            <div class="footer">
                                                                <span id="spec-readmore" class="btn">
                                                                    Read More
                                                                </span>
                                                            </div>
                                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Close Content -->

                <% if(relatedPrds) { %>
                    <div class="related-prd">
                        <h3>Similar products</h3>
                        <div id="carousel">
                            <div id="content">
                                <div class="card-group">
                                </div>
                            </div>
                        </div>
                        <button id="prev">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                                <path fill="none" d="M0 0h24v24H0V0z" />
                                <path d="M15.61 7.41L14.2 6l-6 6 6 6 1.41-1.41L11.03 12l4.58-4.59z" />
                            </svg>
                        </button>
                        <button id="next">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                                <path fill="none" d="M0 0h24v24H0V0z" />
                                <path d="M10.02 6L8.61 7.41 13.19 12l-4.58 4.59L10.02 18l6-6-6-6z" />
                            </svg>
                        </button>
                    </div>
                    <% } %>
            </section>
            <% } %>